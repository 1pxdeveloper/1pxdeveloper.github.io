* {
  margin: 0;
  padding: 0;
}

html, body {
  background: #f1f1f1;
  height 100%
}

[hidden] {
  display none !important
}

body
  display: flex
  font-weight 200

*
  font inherit
  box-sizing border-box

ai-app
  display block
  margin: auto;
  width: 375px;
  height: 667px;
  padding: 48px 15px;
  border: 1px solid rgba(0, 0, 0, .2);
  border-radius: 30px;
  background: #fff;
  box-shadow: 0 0 8px rgba(0, 0, 0, .1);
  box-sizing content-box


  main
    display: flex;
    flex-direction: column;
    border: 1px inset rgba(0, 0, 0, .2);
    height: 100%;
    overflow-y: scroll;

    > section
      flex 1;
      display: flex;
      flex-direction: column
      position relative


flex, [flex] {
  flex: 1;
}

[hbox] {
  display flex
}

[vbox] {
  display flex
  flex-direction column
}


flex
  display flex

h1 {
  text-align: center;
  font-size 32px

}

divider
  display block
  height 0
  border-top 1px solid #ccc


header
  padding 0 16px

mic-wave
  display block
  position absolute
  bottom 0px
  //height 50%
  //margin-top -75px

  h1
    font-weight 100
    font-size 24px
    text-align center

.prev-msg
  padding 16px
  font-size 16px
  position absolute
  top 0
  font-style italic
  width 100%

.msg
  text-align center;
  padding 16px
  color #ccc
  width 100%
  font-size 32px
  font-weight 200

  &.isfinal
    color black


.speech-bubble {
  position: relative;
  background: #ccc;
  border-radius: .4em;
  padding: 12px;
  margin: 12px;
}

.speech-bubble:after {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 0;
  height: 0;
  border: 20px solid transparent;
  border-right-color: #ccc;
  border-left: 0;
  border-top: 0;
  margin-top: -10px;
  margin-left: -20px;
}


.speech-bubble-me {
  position: relative;
  background: #aaa;
  border-radius: .4em;
  padding: 12px;
  margin: 12px;
  text-align: right;
  margin-bottom: 24px;
}

.speech-bubble-me:after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  width: 0;
  height: 0;
  border: 20px solid transparent;
  border-left-color: #aaa;
  border-right: 0;
  border-bottom: 0;
  margin-top: -10px;
  margin-right: -20px;
}


cursor
  display inline-block
  height 1em
  border-right 2px solid #ccc


@keyframes blink {
  50% {
    opacity: 0.0;
  }
}

@-webkit-keyframes blink {
  50% {
    opacity: 0.0;
  }
}

.blink {
  animation: blink 1s step-start 0s infinite;
  -webkit-animation: blink 1s step-start 0s infinite;
}


.hint
  width 100%
  display block
  text-align center
  font-family monospace
  font-size 16px
  color #ccc