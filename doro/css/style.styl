@import core

$background = #20242a


*
  margin 0
  padding 0
  box-sizing border-box

*
  //outline 1px solid #4f80ff
  font inherit

html,body
  height 100%

html
  background #f0f0f0

body
  font-family "Apple SD Gothic Neo", 'Noto Sans KR', "Noto Sans CJK KR", "Helvetica Neue", sans-serif
  position relative
  vbox()
  background $background
  margin auto
  color #fff
  font-size 14px
  width 400px






main
  flex 1

  ui-scrollview
    height 8000%;
    background $background



footer
  hbox()
  position fixed
  width 400px
  left 50%
  transform translateX(-50%)
  bottom 0
  height 96px
  background $background url(../imgs/footer.png) no-repeat
  background-size contain


ui-scrollview
  vbox()
  position relative


section.kms
  layer()
  text-align center

  h1
    position absolute
    font-size 54px
    font-weight 600
    color #ccc
    opacity 0.2
    left 0
    right 0
    margin-bottom -70px
    text-align right


section.line
  position absolute
  top 0
  bottom 0
  left 48px
  width 6px
  background-image: linear-gradient(rgba(255,255,255,.2) 60%, rgba(255,255,255,0) 0%);
  background-position: right;
  background-size: 6px 120px;
  background-repeat: repeat-y;


section.todo
  position absolute
  display grid
  grid-template-columns repeat(4, 24px 1fr 24px)
  grid-template-rows auto
  left 0
  right 0

  .icon
    grid-column-start 2
    grid-column-end 3
    >div
      width 40px
      ratio(1,1)
      margin auto
      background orange
      border-radius 50%
      position relative

      >svg
        position absolute
        top 50%
        left 50%
        transform translate3d(-50%,-50%,0)

  .date
    grid-column-start 4
    grid-column-end 8

  .km
    grid-column-start -5
    grid-column-end -2
    text-align right

  .box
    //display contents
    grid-column-start 4
    grid-column-end -1
    padding 12px 24px
    background orange
    border-radius 8px 0 0 8px
    color #000

    h1
      grid-column-start 4
      grid-column-end -2


section.current-line
  position fixed
  bottom 100px
  width 400px
  height 1px
  left 50%
  transform translateX(-50%)
  border-top 1px solid orange;

  .km
    position absolute
    left 0
    bottom 50%;
    text-align right
    color orange;
    background $background
    padding 8px
    height 24px
    width 18%;
    margin-bottom -6px
    margin-left 12px
    white-space nowrap

section.current
  position fixed
  bottom 80px
  width 400px
  height 80px
  left 50%
  transform translateX(-50%)

  section.todo
    grid-template-rows auto

    .icon>div
    .box
      background-color #fff
      color #000



+mobile()
  body
  section.current
  section.current-line
  footer
    width 100%
