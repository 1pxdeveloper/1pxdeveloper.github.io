@import core

$background = #262b35
$top = 72px
$orange = #ffaa21
$green = #29be9b;
$gray-border = #dedede;
$green-gradient3 = linear-gradient(102deg, #14ffa4, #11cfc1, #11cbc4);

$width = 414px
$safe-zone = 24px

$header-font-size = 18px
$green = #29be9b
$font-black = #2f2f2f

*
  margin 0
  padding 0
  box-sizing border-box
  font inherit
  color inherit

html
  background #e2e2e2

body
  font-weight bold
  font-family "Apple SD Gothic Neo", 'Noto Sans KR', "Noto Sans CJK KR", "Helvetica Neue", sans-serif
  font-size 14px
  line-height 1.43
  letter-spacing -0.84px;
  width $width
  margin auto
  color #2f2f2f

  > h1
    font-size 20px
    margin 1em 0
    margin-top 5rem

  > *
    margin 1.62rem 0


[flex]
  flex 1

[color="green"]
  color $green

space
  display block

  &[size="safe-zone"]
    padding $safe-zone $safe-zone 0 0

  &[size="gap"]
    padding $safe-zone $safe-zone 0 0

doro-header
  display block
  width $width
  object-fit: contain;
  box-shadow: 0 10px 6px 0 rgba(0, 0, 0, 0.16);
  background-image: linear-gradient(102deg, #1dd87b, #11cbc4);
  color #fff
  font-size $header-font-size
  padding 0 11px

  > header
    hbox()
    height 56px

  h1
    font-size 18px
    letter-spacing: -1.08px;

  p
    font-size 14px
    line-height 1.43
    letter-spacing -0.84px;
    padding 0 17px
    text-align center
    margin auto

  &[type="dark"]
    opacity: 0.95;
    box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.16);
    background-image: linear-gradient(102deg, #393a41, #2f2f34);


doro-todo
  hbox()
  height: 55px;

  .km
    flex()
    font-size: 13px;
    line-height: 1.46;
    letter-spacing: -0.78px;
    color: #ffaa21;
    padding 0 11px

  .todo
    hbox()
    color #fff
    width: 317px;
    height 100%;
    object-fit: contain;
    border-radius: 4px;
    box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.27);
    background-image: linear-gradient(125deg, #ef6837, #ffaa21);
    padding-right 11px
    overflow hidden

    .icon
      display flex
      width 42px
      height 100%
      text-align center

      > *
        margin auto

    h1
      font-size: 14px;
      line-height: 1.21;
      letter-spacing: -0.84px;
      color: #fffcfc;
      padding 0 7px

    h2
      opacity: 0.9;
      font-size: 12px;
      line-height: 1.5;
      letter-spacing: -0.72px;
      text-align: right;

  .toast
    display flex
    width: 295px;
    height: 30px;
    object-fit: contain;
    border-radius: 20px;
    background-image: linear-gradient(99deg, #1dd8d1, #33a1ff);
    font-size: 13px;
    line-height: 1.46;
    letter-spacing: -0.78px;
    color: #fff
    text-align center

    > *
      margin auto


doro-todo[type="outline"]
  .todo
    background transparent
    border 1px solid #ff9d00
    border-left 0

  .icon
    background-image: linear-gradient(125deg, #ef6837, #ffaa21);

  h1
  h2
    color $font-black


doro-todo[type="white"]
  .todo
    background #fff

  .icon
    color #ff9d00

  h1
  h2
    color $font-black


doro-todo[type="warn"]
  .km
    color #818181

  .todo
    background-image: linear-gradient(109deg, #ff628c, #e04d39);


doro-log-date {
  display block
  font-size: 18px;
  line-height: 1.5;
  letter-spacing: -1.08px;
  text-align: right
  color: #ffffff;
}


doro-log
  hbox()

  .km
    flex()
    font-size: 13px;
    line-height: 1.46;
    letter-spacing: -0.78px;
    color: #ffaa21;
    padding 0 11px
    align-self flex-end

  .log
    width: 317px;
    border-radius: 4px;
    box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.27);
    background-color #fff
    padding 24px 11px

    > section
      hbox()
      margin 11px 0

    .icon
      width 48px

    h2
      color $green

    h3
      opacity: 0.3;
      font-size: 12px;
      line-height: 1.42;
      letter-spacing: -0.72px;
      text-align: right;


doro-tip
doro-report
  vbox()
  width: 392px;
  object-fit: contain;
  box-shadow: 0 9px 10px 0 rgba(0, 0, 0, 0.46);
  background-color: #ffffff;
  margin auto
  border-radius 3px
  overflow hidden

  .top
    height: 10px;
    background-image: linear-gradient(101deg, #1dd8d1, #33a1ff);

  > section
    flex 1
    padding 44px 46px

    h1
      font-size: 20px;
      line-height: 1;
      letter-spacing: -1.2px;
      color: #2f2f2f;

    h2
    p
      font-size 13px
      line-height 1.54
      letter-spacing: -0.78px;

    h2
      margin-bottom 5px

    space
      height 31px


doro-report
  text-align center

  .top
    background-image: linear-gradient(101deg, #14ffa4, #11cbc4);

  .grid
    display grid
    grid-template-columns 1fr 1fr 1fr

    > div
      padding 11px

      h2
        font-family: Roboto;
        font-size: 13px;
        line-height: 1.54;
        letter-spacing: -0.78px;
        color: #29be9b;


doro-bar
  hbox()
  height: 50px;
  object-fit: contain;
  border: solid 1px #ededed;
  padding 0 37px


doro-bar[type="black"]
  width: 414px;
  height: 60px;
  object-fit: contain;
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.1);
  background-image: linear-gradient(99deg, #393a41, #2f2f34);
  color #fff
  font-size 12px
  line-height: 1.33;
  letter-spacing: -0.72px;
  text-align center

doro-para
  display block
  width: 340px;
  margin auto
  object-fit: contain;
  border-radius: 4px;
  border: solid 1px #e0e0e0;
  background-color: #fcfcfc;
  padding 33px
  font-size 12px
  line-height: 1.33;
  letter-spacing: -0.72px;


doro-big-date
  hbox()
  height: 80px;
  border: solid 1px #efefef;

  h1
    font-size: 20px;
    line-height: 1.3;
    letter-spacing: normal;
    text-align: center;
    color: #4a4e52;
    margin auto


doro-title
  display block
  height: 126px;
  object-fit: contain;
  border: solid 1px #f0f0f0;
  padding 0 37px

  h1
    font-size: 24px;
    line-height: 0.58;
    letter-spacing: -1.44px;


doro-input-field
  display block
  height: 77px;
  border: solid 1px #ededed;
  padding 0 37px


doro-check-field
  hbox()
  height: 44px;
  border: solid 1px #f5f5f5;
  background-color: #ffffff;
  padding 0 37px

  h2
    color $green


