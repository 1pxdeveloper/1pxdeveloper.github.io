@import core


/// Core
init()
  *
    margin 0
    padding 0
    border 0
    box-sizing border-box
    font inherit
    color inherit

  body
    font-family "Apple SD Gothic Neo", 'Noto Sans KR', "Noto Sans CJK KR", "Helvetica Neue", sans-serif

  space
    display block
    visibility hidden


wrap-center()
  > *
    margin auto

btn()
  hbox()
  wrap-center()
  text-align center


colors($names)
  for $name in $names
    {"[color="+$name+"]"}
      color lookup("$" +$name)

//theme()
