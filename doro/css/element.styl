//  letter-spacing: -1.08px;


[hbox]
  hbox()

[flex]
  flex 1


/// Values: color
$gray-border = #dedede;
$green-gradient-header = linear-gradient(102deg, #1dd87b, #11cbc4)
$green-gradient3 = linear-gradient(102deg, #14ffa4, #11cfc1, #11cbc4);

$orange = #ffaa21
$green = #29be9b
$black = #2f2f2f
$black_50 = blend(rgba(#2f2f2f, .5), #fff)
$black_70 = blend(rgba(#2f2f2f, .7), #fff)
$gray-dark = #818181;

$background = #262b35
$border = $gray-border


/// Values: size
$top = 72px
$width = 414px
$safe-zone = 24px
$header-font-size = 18px


init()
colors("black" "orange" "green" "gray-dark")

html
  background #e2e2e2
  font-size 11px

body
  font-size 14px
  line-height 1.43
  letter-spacing -0.062em
  font-weight bold
  width $width
  margin auto
  color #2f2f2f

  > *
    margin 1.62rem 0

  > h1
    font-size 32px
    color #202329;
    margin 1em 0
    margin-top 5rem


space
  &[size="safe-zone"]
    padding $safe-zone $safe-zone 0 0

  &[size="gap"]
    padding $safe-zone $safe-zone 0 0

  &[size="1"]
    padding 1rem 1rem 0 0

  &[size="2"]
    padding 2rem 3rem 0 0

  &[size="3"]
    padding 3rem 3rem 0 0


doro-btn
  btn()
  padding 1rem

  &.navigation-icon
    min-width 62px
    height 100%

doro-icon
  btn()
  min-width 4rem
  padding 1rem

doro-dividor
  border-bottom 1px solid $border


doro-header
doro-footer
  display block
  width $width
  box-shadow: 0 10px 6px 0 rgba(0, 0, 0, 0.16);
  background-image $green-gradient-header
  color #fff

  > header
    hbox()
    min-height 5rem

  h1
    font-size 18px

  p
    font-size 14px
    padding 0 17px
    text-align center
    margin auto

doro-header
doro-footer
  &[theme="dark"]
    opacity: 0.95;
    box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.16);
    background-image: linear-gradient(102deg, #393a41, #2f2f34);

input.doro-input
  width: 255px;
  height: 40px;
  border-radius: 0.7em
  box-shadow: 0 5px 6px 0 rgba(0, 0, 0, 0.05);
  background-color: #ffffff;
  font-size 14px
  color $black_50
  padding 1.38em


doro-todo
  hbox()
  height: 55px;

  .km
    flex()
    font-size: 13px;
    line-height: 1.46;
    letter-spacing: -0.78px;
    color: #ffaa21;
    padding 0 11px

  .todo
    hbox()
    color #fff
    width: 317px;
    height 100%;
    object-fit: contain;
    border-radius: 4px;
    box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.27);
    background-image: linear-gradient(125deg, #ef6837, #ffaa21);
    padding-right 11px
    overflow hidden

    .icon
      wrap-center()
      display flex
      width 42px
      height 100%
      text-align center

      svg
        width 16px
        height 18px

    h1
      font-size: 14px;
      line-height: 1.21;
      letter-spacing: -0.84px;
      color: #fffcfc;
      padding 0 7px

    h2
      opacity: 0.9;
      font-size: 12px;
      line-height: 1.5;
      letter-spacing: -0.72px;
      text-align: right;

  .toast
    display flex
    width: 295px;
    height: 30px;
    object-fit: contain;
    border-radius: 20px;
    background-image: linear-gradient(99deg, #1dd8d1, #33a1ff);
    font-size: 13px;
    line-height: 1.46;
    letter-spacing: -0.78px;
    color: #fff
    text-align center

    > *
      margin auto


doro-todo[type="outline"]
  .todo
    background transparent
    border 1px solid #ff9d00
    border-left 0

  .icon
    background-image: linear-gradient(125deg, #ef6837, #ffaa21);

  h1
  h2
    color $black


doro-todo[type="white"]
  .todo
    background #fff

  .icon
    color #ff9d00

    svg
      *
        fill #ff9d00

  h1
  h2
    color $black


doro-todo[type="warn"]
  .km
    color #818181

  .todo
    background-image: linear-gradient(109deg, #ff628c, #e04d39);


doro-log-date {
  display block
  font-size: 18px;
  text-align: right
  color: #fff;
  margin-bottom 1rem
}


doro-log
  hbox()

  .km
    flex()
    font-size: 13px;
    line-height: 1.46;
    letter-spacing: -0.78px;
    color: #ffaa21;
    padding 0 11px
    align-self flex-end

  .log
    width: 317px;
    border-radius: 4px;
    box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.27);
    background-color #fff
    padding 24px 11px

    > section
      hbox()
      margin 11px 0

    .icon
      width 48px

    h2
      color $green

    h3
      opacity: 0.3;
      font-size: 12px;
      line-height: 1.42;
      letter-spacing: -0.72px;
      text-align: right;


doro-tip
doro-report
  vbox()
  width: 392px;
  object-fit: contain;
  box-shadow: 0 9px 10px 0 rgba(0, 0, 0, 0.46);
  background-color: #ffffff;
  margin auto
  border-radius 3px
  overflow hidden

  .top
    height: 10px;
    background-image: linear-gradient(101deg, #1dd8d1, #33a1ff);

  > section
    flex 1
    padding 44px 46px

    h1
      font-size: 20px;
      line-height: 1;
      letter-spacing: -1.2px;
      color: #2f2f2f;

    h2
    p
      font-size 13px
      line-height 1.54
      letter-spacing: -0.78px;

    h2
      margin-bottom 5px

    space
      height 31px


doro-report
  text-align center

  h2
    font-family: Roboto;
    font-size: 13px;
    color $green

  > section
    padding 44px 0

  .top
    background-image: linear-gradient(101deg, #14ffa4, #11cbc4);

  .grid
    display grid
    grid-template-columns 1fr 1fr 1fr

    > div
      padding 11px


doro-bar
  hbox()
  height: 50px;
  padding 0 37px


doro-bar[type="black"]
  width: 414px;
  height: 60px;
  object-fit: contain;
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.1);
  background-image: linear-gradient(99deg, #393a41, #2f2f34);
  color #fff
  font-size 12px
  line-height: 1.33;
  letter-spacing: -0.72px;
  text-align center


doro-para
  display block
  width: 340px;
  margin auto
  border-radius: 4px;
  background-color: #fcfcfc;
  padding 33px
  font-size 12px
  line-height: 1.33;
  letter-spacing: -0.72px;


doro-big-date
  hbox()
  height: 80px;
  border: solid 1px #efefef;

  h1
    font-size: 20px;
    line-height: 1.3;
    letter-spacing: normal;
    text-align: center;
    color: #4a4e52;
    margin auto


doro-title
  check-outline()
  display block
  height: 126px;
  object-fit: contain;
  padding 0 3.38rem

  h1
    font-size: 24px;
    margin-top 40px
    margin-bottom 50px


doro-input-field
  display block
  height: 77px;
  border: solid 1px #ededed;
  padding 0 3.38rem

  h1
    font-size 14px


doro-check-field
  hbox()
  height: 44px;
  border: solid 1px #f5f5f5;
  background-color: #ffffff;
  padding 0 3.38rem

  h1
    font-size 14px

  h2
    color $green



doro-section
  vbox()
  padding 1rem 3.38rem

doro-page
  > *
    margin 1.62rem 0
    border: solid 1px #ededed;


doro-graph
  vbox()
  background #fff
  min-height 10rem
  padding 0 3.38rem


doro-dl-field
  check-outline()
  hbox()
  padding 1rem 3.38rem

doro-datetime
  check-outline()
  hbox()
  padding 1rem 3.38rem


doro-background-menu
  vbox()
  background $background
  padding 4.38rem

  doro-background-menu-item
    btn()
    border 2px solid #fff
    box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.27);
    min-height 4.38rem
    color #fff
    margin 1rem 0

    > div
      btn()


doro-splash
  vbox()
  text-align center
  background #fff
  padding 7rem

  h1
    font-size 20px


doro-page-indicagtor
  hbox()
  margin auto

  > div
    border 1px solid $border
    border-radius 50%
    width .8rem
    height .8rem
    margin 0 .19rem

    &[selected]
      background $green
      border-color $green


doro-youtube-header
  vbox()
  background #fff
  min-height 3rem
  padding 3rem 3.38rem

  h1
    font-size 20px

  p
    font-size 13px

  > section
    hbox()


doro-youtube-item
  hbox()
  background #fff
  padding 2rem 3.38rem

  doro-youtube-thumbnail
    hbox()

    > div
      ratio(16, 9)
      width 162px
      background url(../imgs/yu_sample.jpg) no-repeat center center
      background-size cover
      border-radius 3px
      overflow hidden

  h2, h3
    text-align right
    font-size 12px
    color $black_50

  h3
    color $black_70


doro-comment
  hbox()
  background #fff
  padding 1rem 1.38rem

  > section
    hbox(start)
    padding 1.38rem 2rem

    border-radius: 4px;
    box-shadow: 1px 2px 6px 0 rgba(0, 0, 0, 0.03);
    border: solid 1px #dedede;
    background-color: #ffffff;


    doro-avatar
      hbox()
      width 3rem
      ratio(1, 1)
      border 1px solid $border
      background $green
      border-radius 50%
      margin-right 1rem

    h2
      font-weight: normal

    p
      font-size 13px


