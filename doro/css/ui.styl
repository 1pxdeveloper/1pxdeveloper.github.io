@import core

$background = #262b35
$top = 72px
$orange = #e6b34c

*
  margin 0
  padding 0
  box-sizing border-box

*
  //outline 1px solid #4f80ff
  font inherit
  user-select none
  -webkit-user-select none

html, body
  height 100%
  overflow hidden

html
  background #f0f0f0

body
  font-family "Apple SD Gothic Neo", 'Noto Sans KR', "Noto Sans CJK KR", "Helvetica Neue", sans-serif
  font-size 14px
  color #000

body
  position relative
  vbox()
  background #fff
  margin auto
  width 414px

[flex]
flex
  flex 1

input
  border 0
  outline 0
  color inherit
  font inherit

main
  position relative
  height 100%

[grid]
  > *
    display grid
    grid-template-columns 13px repeat(11, 24px 9px) 24px auto


ui-top-app-bar
  height: 80px;
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.1);
  background-image: linear-gradient(102deg, #1dd87b, #11cbc4);
  font-weight bold;
  letter-spacing: -0.54px;
  color #fff
  font-size 18px
  grid-template-rows 1fr 2fr

  > *
    align-self center
    grid-row 2

  svg
    grid-column 2 / 3

  h1
    grid-column 4 / -1


.title
  font-family: NotoSansCJKkr;
  font-size: 18px;
  font-weight: bold;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: -1px;
  text-align: left;
  color: #2f2f2f;
  grid-column 4 / -4


h1.title
  margin 48px 0

h2.title
  font-size 14px


.form
  grid-row-gap 10px

  & + .form
    margin-top 40px

  > *
    grid-column 4 / -4

  label
    display block
    border-bottom 1px solid #ddd
    color #29be9b
    font-size 16px
    padding 10px 0
    grid-row 2

  button
    width: 108px;
    height: 34px;
    border-radius: 4px;
    border: solid 2px #45a2ff;
    background-color: #ffffff;
    color #45a2ff

    justify-self end
    grid-column -5/auto
    grid-row 2
