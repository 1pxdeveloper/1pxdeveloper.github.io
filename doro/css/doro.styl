@import core

$background = #262b35
$top = 72px
$orange = #e6b34c

*
  margin 0
  padding 0
  box-sizing border-box

*
  //outline 1px solid #4f80ff
  font inherit
  user-select none
  -webkit-user-select none

html, body
  height 100%
  overflow hidden

html
  background #f0f0f0

body
  font-family "Apple SD Gothic Neo", 'Noto Sans KR', "Noto Sans CJK KR", "Helvetica Neue", sans-serif
  font-size 14px
  color #000

body
  position relative
  vbox()
  background $background
  margin auto
  width 400px

[flex]
flex
  flex 1

ui-header
  hbox()
  height 72px
  background linear-gradient(to right, #76cec9, #7ed892)
  color #fff

  h1
    hbox()
    width 25%

    img
      display block
      width 62%
      margin auto



ui-scrollview
  position relative
  background $background
  flex 1
  overflow scroll

ui-content
  position relative
  display block
  padding-bottom 20%
  //height 10000%


ui-doro
  position absolute
  top 0
  bottom 0
  left 0
  width 25%

  ui-line
    position absolute
    top 0%
    bottom 0
    left 50%
    width 4px
    background-image: linear-gradient($orange 38%, rgba(255, 255, 255, 0) 0%);
    background-position: right;
    background-size: 6px 72px;
    background-repeat: repeat-y;
    z-index 0
    margin-left -2px



doro-reminder-item
  position relative
  hbox()
  margin 300px 0

  .km
    width 25%
    text-align center
    color $orange
    background $background
    font-weight bold

  .items
    flex 1

    section
      flex 1
      hbox()
      background #fff
      border-radius 6px 0 0 6px
      overflow hidden
      min-height 100px
      margin 8px 0

      .icon
        position relative
        hbox()
        width 40px
        height 100px
        background linear-gradient(#76cec9, #7ed892)

        img
          display block
          margin auto
          width 60%

      article
        display block
        padding 1em

        h1
          font-weight bold
          margin-bottom 2em

        h2
          font-size 0.8em
          text-align right
          color #999


ui-float-button
  position absolute
  right 0
  bottom 0
  width 120px
  height 120px
  border-radius 50%
  background $orange
  margin-right -10%
  margin-bottom -10%


.current-line
  position absolute
  bottom 24px
  left 0
  right 0
  border-top 1px solid $orange
  color $orange

  span
    display block
    background $background
    position relative
    top -9px
    width 25%
    text-align center


.doro-car
  display block
  position absolute
  bottom 64px
  left 0
  right 0
  width 25%
  height 64px

  .car-icon
    width 60px
    height 60px
    border-radius 50%
    background #fff
    margin auto
    hbox()
    img
      display block
      width 50%
      margin auto

.tip
  position relative
  border-radius 8px
  overflow hidden

  >div
    height 12px
    background #6eadf8

  img
    display block
    width 100%

