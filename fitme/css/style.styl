@import core

$width = 375px
$height = 667px

$msg-font-size = 40px
$msg-font-weight = 200
$msg-script-opacity = 0.7

$guide-font-size = 28px
$hint-text-font-size = 40px
$hint-option-text-font-size = 28px

$feedback-font-size = 55px

$feedback-ko-font-size = 22px
$feedback-ko-line-height = 1.35


/// Black Theme
$mobile_edge = #000
$bg = #fff
$text-color = #fff
$accent = #e84991

$border = rgba(0, 0, 0, .1)
$white-transparent = rgba(255, 255, 255, .38)


/// UTIL
[hidden] {
  display none !important
}

///
flex, [flex] {
  flex: 1;
}

[hbox]
  display flex

[vbox] {
  display flex
  flex-direction column
}

flex
  display flex


/// COMMON
*
  font inherit
  box-sizing border-box
  margin: 0;
  padding: 0;

html, body
  height 100%

body
  display: flex
  font-family "Apple SD Gothic Neo", 'Noto Sans KR', "Noto Sans CJK KR", "Helvetica Neue", sans-serif;
  line-height 1.38
  overflow hidden
  overflow-y scroll

wrap
  display: flex;
  position relative
  flex-direction: column;
  width 100%
  height: 100%;
  margin auto
  background #fff

  main
    display flex
    flex-direction column
    width 100%
    height 100%
    overflow visible
    transform translate3d(0, 0, 0)
    background $bg


main
  overflow-y scroll

+tablet-and-desktop()
  body
    background #fafafa

  wrap
    width: $width
    height: $height
    max-height: calc(100% - 140px)
    border-radius: 36px;
    box-shadow: 0 0 32px rgba(0, 0, 0, .2), 0 12px 24px rgba(0, 0, 0, .5)
    box-sizing content-box
    border 16px solid $mobile_edge
    border-top-width 60px
    border-bottom-width 60px

    &:before {
      content: '';
      display: block;
      width: 60px;
      height: 5px;
      position: absolute;
      top: -30px;
      left: 50%;
      transform: translate(-50%, -50%);
      background: rgba(128, 128, 128, 0.5)
      border-radius: 10px;
    }

    main
      overflow-y scroll


html
  font-size (375px / 34)

space
  display block

#header
  layer()
  z-index 9999
  position fixed
  bottom auto
  height 7rem
  //border-bottom 1px solid $border
  //background $white-transparent url("../imgs/fitme_logo.png") no-repeat 100% center
  background url("../imgs/fitme_logo.png") no-repeat 100% center
  background-size auto 100%
  +tablet-and-desktop()
    position absolute

#footer
  font-size 1rem
  background #222
  color #ccc
  padding 2rem
  border-top 1px solid $border

space.header
  min-height 5rem

.main-photo
  ratio(1, 2)
  //layer()
  //background url("../photo/1.JPEG") no-repeat center center
  background url("../list/6.jpg") no-repeat center center
  background-size cover

  > div
    position absolute
    right 2rem
    bottom 5rem
    font-size 1.62rem
    color #fff
    text-align right

    h1
      font-style italic
      background #000
      padding 0 0.16rem

    h2
      font-size 2.62rem


section.grid-items
  display grid
  grid-template-columns 1fr 1fr 1fr // 1fr
  grid-gap 1rem
  padding 0 1rem

  &[grid="2"]
    grid-template-columns 1fr 1fr

  &[grid="3"]
    grid-template-columns 1fr 1fr 1fr

  &[grid="4"]
    grid-template-columns 1fr 1fr 1fr 1fr

  .list-item
    text-align center

    footer
      padding 0.38rem 1rem

      h2
        font-weight bold

        &[del]
          font-weight normal
          text-decoration line-through
          color #000


  .list-photo
    ratio(1, 1.62)
    background-position center center
    background-size cover


.indigators
  layer()
  top auto
  height 1rem
  bottom 2rem
  hbox()

  .indigator
    border-radius 50%
    width 0.38rem
    height 0.38rem
    background #fff
    margin 0.38rem
