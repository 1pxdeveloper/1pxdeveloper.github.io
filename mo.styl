mobile()
  @media (max-width: 767px)
    {block}

tablet()
  @media (min-width: 768px) and (max-width: 1023px)
    {block}

desktop()
  @media (min-width: 1024px)
    {block}

mobile-and-tablet()
  @media (max-width: 1023px)
    {block}

tablet-and-desktop()
  @media (min-width: 768px)
    {block}


*
  margin 0
  padding 0
  box-sizing border-box

html, body
  height 100%

body
  display flex

main
  display: flex;
  position relative
  flex-direction: column;
  height: 100%;
  overflow-y: scroll;
  margin auto
  background #fff


+tablet-and-desktop()
  body
    background #fafafa

  main
    width: 375px;
    height: 667px;
    border-radius: 30px;
    box-shadow: 0 0 32px rgba(0, 0, 0, .2), 0 12px 24px rgba(0, 0, 0, .5)
    box-sizing content-box
    border 72px solid #111
    border-left-width 16px
    border-right-width 16px
